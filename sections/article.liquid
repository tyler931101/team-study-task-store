<article style="padding:2rem;max-width:700px;margin:0 auto">
  <h1 style="margin-bottom:1rem">{{ article.title }}</h1>
  <p>
    <small>Published {{ article.published_at | date: '%B %d, %Y' }}</small>
  </p>

  {% if article.image %}
    <img
      src="{{ article.image | image_url: width: 1200 }}"
      alt="{{ article.title }}"
      style="width:100%;border-radius:.5rem;margin:1rem 0"
    >
  {% endif %}

  <div style="margin-top:1rem">
    {{ article.content }}
  </div>

  <p style="margin-top:2rem">
    <a href="{{ blog.url }}">‚Üê Back to {{ blog.title }}</a>
  </p>
</article>

{% schema %}
{
  "name": "Main article",
  "settings": [],
  "presets": [{ "name": "Main article" }]
}
{% endschema %}
