<section style="padding:3rem 1rem;background:#f5f5f5;text-align:center">
  <div style="max-width:1000px;margin:0 auto">
    <h2 style="font-size:2rem;margin-bottom:2rem">{{ section.settings.heading }}</h2>

    <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:2rem">
      {% for block in section.blocks %}
        <div style="background:white;padding:2rem;border-radius:.5rem;box-shadow:0 2px 6px rgba(0,0,0,.05)">
          {% if block.settings.icon != blank %}
            <div style="font-size:2rem;margin-bottom:.75rem">{{ block.settings.icon }}</div>
          {% endif %}
          <h3 style="margin-bottom:.5rem">{{ block.settings.title }}</h3>
          <p style="color:#555">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature icons",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Why shop with us?"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji or text)",
          "default": "ðŸšš"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Enjoy free worldwide shipping on all orders."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Feature icons",
      "blocks": [{ "type": "feature" }, { "type": "feature" }, { "type": "feature" }]
    }
  ]
}
{% endschema %}
