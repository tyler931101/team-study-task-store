<footer class="site-footer">
  <div class="footer-container">
    <!-- Column 1: Store Info -->
    <div class="footer-col">
      <h4>{{ shop.name }}</h4>
      <p>
        &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </p>
    </div>

    <!-- Column 2: Navigation -->
    <div class="footer-col">
      <h4>Quick Links</h4>
      <ul>
        {% for link in section.settings.menu.links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Column 3: Payments -->
    <div class="footer-col">
      <h4>We Accept</h4>
      <div class="footer-payments">
        {% if section.settings.show_payment_icons %}
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .site-footer {
    background: #111;
    color: #eee;
    padding: 3rem 2rem;
    margin-top: 3rem;
  }

  .footer-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-col h4 {
    margin-bottom: 1rem;
    font-size: 1.2rem;
    color: #fff;
  }

  .footer-col ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-col ul li {
    margin-bottom: 0.5rem;
  }

  .footer-col a {
    color: #aaa;
    text-decoration: none;
  }

  .footer-col a:hover {
    color: #fff;
  }

  .footer-payments svg {
    height: 24px;
    margin-right: 0.5rem;
  }
{% endstylesheet %}
