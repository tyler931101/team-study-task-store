<section style="padding:2rem;text-align:center">
  <h1>{{ section.settings.greeting }}</h1>

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image' %}
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.alt }}"
            style="max-width:100%;height:auto;margin:1rem auto;"
          >
        {% endif %}
      {% when 'paragraph' %}
        <p>{{ block.settings.text }}</p>
      {% when 'button' %}
        <a
          href="{{ block.settings.url }}"
          class="btn"
          style="display:inline-block;margin-top:1rem;padding:.6rem 1rem;border:1px solid #333;border-radius:.5rem;text-decoration:none"
        >
          {{ block.settings.label }}
        </a>
    {% endcase %}
  {% endfor %}
</section>

{% schema %}
{
  "name": "Hello World",
  "settings": [{ "type": "text", "id": "greeting", "label": "Greeting", "default": "Hello, Shopify" }],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt", "label": "Alt text" }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [{ "type": "textarea", "id": "text", "label": "Text" }]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        { "type": "text", "id": "label", "label": "Label" },
        { "type": "url", "id": "url", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Hello World" }]
}
{% endschema %}
