<section style="padding:3rem 1rem;background:#333;color:white;text-align:center">
  <h2 style="font-size:2rem;margin-bottom:1rem">{{ section.settings.heading }}</h2>
  <p style="margin-bottom:2rem">{{ section.settings.subheading }}</p>

  <form
    method="post"
    action="{{ routes.root_url }}contact#newsletter"
    accept-charset="UTF-8"
    class="newsletter-form"
    style="max-width:500px;margin:0 auto;display:flex;gap:.5rem"
  >
    <input type="hidden" name="form_type" value="customer">
    <input type="hidden" name="utf8" value="âœ“">

    <input
      type="email"
      name="contact[email]"
      placeholder="Enter your email"
      required
      style="flex:1;padding:.75rem;border:none;border-radius:.25rem"
    >
    <button
      type="submit"
      style="padding:.75rem 1.25rem;background:{{ section.settings.button_color }};color:white;border:none;border-radius:.25rem"
    >
      {{ section.settings.button_label }}
    </button>
  </form>
</section>

{% schema %}
{
  "name": "Newsletter signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get updates about new products and special offers."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#ff6600"
    }
  ],
  "presets": [{ "name": "Newsletter signup" }]
}
{% endschema %}
