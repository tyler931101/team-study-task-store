<section style="padding:5rem 1rem;text-align:center;max-width:600px;margin:0 auto">
  <h1 style="font-size:2.5rem;margin-bottom:1rem">{{ section.settings.heading }}</h1>
  <p style="margin-bottom:2rem">{{ section.settings.subtext }}</p>

  <!-- Newsletter form -->
  {% form 'customer' %}
    <input
      type="email"
      name="contact[email]"
      placeholder="Enter your email"
      required
      style="padding:.75rem;border:1px solid #ccc;border-radius:.25rem;width:100%;max-width:300px;margin-bottom:1rem"
    >
    <button
      type="submit"
      style="padding:.75rem 1.25rem;background:{{ section.settings.button_color }};color:white;border:none;border-radius:.25rem"
    >
      {{ section.settings.button_label }}
    </button>
  {% endform %}

  <!-- Password login -->
  <div style="margin-top:2rem">
    <details>
      <summary style="cursor:pointer;color:#555">Enter store password</summary>
      {% form 'storefront_password' %}
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
          style="padding:.75rem;border:1px solid #ccc;border-radius:.25rem;width:100%;max-width:300px;margin:1rem auto;display:block"
        >
        <button
          type="submit"
          style="padding:.75rem 1.25rem;background:#333;color:white;border:none;border-radius:.25rem"
        >
          Enter
        </button>
      {% endform %}
    </details>
  </div>
</section>

{% schema %}
{
  "name": "Password page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Weâ€™re working on something exciting. Be the first to know when we launch!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button text",
      "default": "Notify Me"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#333333"
    }
  ],
  "presets": [{ "name": "Password page" }]
}
{% endschema %}
