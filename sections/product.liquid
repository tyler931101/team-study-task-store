<section style="padding:2rem;display:grid;grid-template-columns:1fr 1fr;gap:2rem;align-items:start">
  <!-- Product Media -->
  <div>
    {% if product.media.size > 0 %}
      {% for media in product.media %}
        {{ media | media_tag: image_size: '800x' }}
      {% endfor %}
    {% else %}
      <p>No product images</p>
    {% endif %}
  </div>

  <!-- Product Info -->
  <div>
    <h1 style="margin-bottom:1rem">{{ product.title }}</h1>
    <p style="font-size:1.25rem;margin-bottom:1rem">{{ product.price | money }}</p>

    <!-- Add to Cart -->
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      <button type="submit" style="padding:.75rem 1.25rem;border:none;background:#333;color:#fff;border-radius:.25rem">
        Add to Cart
      </button>
    </form>

    <!-- Description -->
    <div style="margin-top:2rem">
      {{ product.description }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main product",
  "settings": [],
  "presets": [{ "name": "Main product" }]
}
{% endschema %}
