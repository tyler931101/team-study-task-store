<section style="padding:3rem 1rem;background:#f9f9f9;text-align:center">
  <h2 style="font-size:2rem;margin-bottom:2rem">{{ section.settings.heading }}</h2>

  <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(250px,1fr));gap:2rem;max-width:1000px;margin:0 auto">
    {% for block in section.blocks %}
      <div style="background:white;padding:1.5rem;border-radius:.5rem;box-shadow:0 2px 6px rgba(0,0,0,.05)">
        <p style="font-style:italic;margin-bottom:1rem">“{{ block.settings.quote }}”</p>
        <p style="font-weight:bold;margin:0">— {{ block.settings.author }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our customers say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "This store is amazing! I love the products."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Jane Doe"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [{ "type": "testimonial" }, { "type": "testimonial" }, { "type": "testimonial" }]
    }
  ]
}
{% endschema %}
